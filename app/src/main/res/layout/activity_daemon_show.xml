<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".daemon.ui.DaemonShowActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnStartLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/teal_200"
                android:padding="10dp"
                android:text="开启本地服务"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnCloseLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/teal_200"
                android:padding="10dp"
                android:text="关闭本地服务"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnCloseRemote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/teal_200"
                android:padding="10dp"
                android:text="关闭远程服务"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnStartSingleAlarmService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/teal_200"
                android:padding="10dp"
                android:text="开启SingleTestAlarmService"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>